<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFF4E1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Botão de voltar -->

        <!-- Nome do Produto -->
        <TextView
            android:id="@+id/productTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="DETALHES DO PEDIDO"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <!-- Seção de escolha de tamanho -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Escolha o tamanho do bolo"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <!-- Opções de tamanho (vertical) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center_vertical">

                <RadioButton
                    android:id="@+id/sizeMini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="Mini"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 20,00"
                    android:textSize="14sp"
                    android:layout_margin="11dp"
                    android:textColor="#333333" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center_vertical">

                <RadioButton
                    android:id="@+id/sizeMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="Médio"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 30,00"
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center_vertical">

                <RadioButton
                    android:id="@+id/sizeLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grande"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 40,00"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginStart="9dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Outras opções e campos continuam iguais... -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Adicionar calda de chocolate?"
                android:textSize="14sp"
                android:textColor="#333333" />

            <Switch
                android:id="@+id/chocolateSyrupSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:thumbTint="#FF9800"
                android:trackTint="#FFC107" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Necessita de embalagem plástica?"
                android:textSize="14sp"
                android:textColor="#333333" />

            <Switch
                android:id="@+id/plasticPackagingSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:thumbTint="#FF9800"
                android:trackTint="#FFC107" />
        </LinearLayout>

        <!-- Campo de observações -->
        <EditText
            android:id="@+id/observationField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Alguma observação?"
            android:maxLength="140"
            android:textSize="14sp"
            android:backgroundTint="#CCCCCC" />

        <!-- Botão de adicionar ao carrinho com contador de quantidade -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Botão de diminuir quantidade total -->
            <Button
                android:id="@+id/decreaseTotalQuantity"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:textSize="20sp"
                android:backgroundTint="@color/dark_ldb"
                android:textColor="#333333" />

            <!-- Quantidade total -->
            <TextView
                android:id="@+id/totalQuantityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Botão de aumentar quantidade total -->
            <Button
                android:id="@+id/increaseTotalQuantity"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:textSize="20sp"
                android:backgroundTint="@color/dark_ldb"
                android:textColor="#FFFFF" />

            <!-- Botão Adicionar ao carrinho -->
            <Button
                android:id="@+id/addToCartOptionsButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Adicionar"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
